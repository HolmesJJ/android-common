<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:padding="@dimen/dp_20"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_22"
        android:textStyle="bold"
        android:fontFamily="@font/balonku_regular"/>

    <ImageView
        android:id="@+id/iv_mouth"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_20"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"/>

    <SeekBar
        android:id="@+id/sb_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/dp_4"
        android:minHeight="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_20"
        android:thumb="@drawable/bg_seek_circle"
        android:thumbOffset="@dimen/dp_0"
        android:progressDrawable="@drawable/bg_seek_progress"
        android:clickable="false"
        android:enabled="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <com.example.common.ui.widget.RoundImageView
            android:id="@+id/riv_warn"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_unwarn"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            app:riv_border_color="@color/white"/>

        <com.example.common.ui.widget.RoundImageView
            android:id="@+id/riv_play"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_play_mouth"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            app:riv_border_color="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/bg_btn_confirm_round"
        android:fontFamily="@font/balonku_regular"
        android:letterSpacing="0.05"
        android:shadowColor="@color/light_gary"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:stateListAnimator="@null"
        android:text="@string/action_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

</LinearLayout>