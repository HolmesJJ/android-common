<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundImageView">
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
    </declare-styleable>
    <declare-styleable name="FixedAspectRatioRelativeLayout">
        <attr name="aspect_ratio_width" format="integer" />
        <attr name="aspect_ratio_height" format="integer" />
    </declare-styleable>
    <!--圆弧进度条-->
    <declare-styleable name="DonutChartView">
        <attr name="dcv_radius" format="dimension"/>
        <attr name="dcv_stroke_width" format="dimension"/>
        <attr name="dcv_circle_color" format="color"/>
        <attr name="dcv_ring_color" format="color"/>
        <attr name="dcv_ring_bg_color" format="color"/>
    </declare-styleable>
    <!--长按进度条-->
    <declare-styleable name="LongPressView">
        <attr name="lpv_radius" format="dimension"/>
        <attr name="lpv_stroke_width" format="dimension"/>
        <attr name="lpv_circle_color" format="color"/>
        <attr name="lpv_ring_color" format="color"/>
        <attr name="lpv_ring_bg_color" format="color"/>
    </declare-styleable>
    <!--条形进度条-->
    <declare-styleable name="BarChartView">
        <attr name="bcv_color" format="color"/>
        <attr name="bcv_bg_color" format="color"/>
        <attr name="bcv_corner_radius" format="dimension"/>
        <attr name="bcv_text_size" format="dimension"/>
    </declare-styleable>
    <!--有范围拖动条-->
    <declare-styleable name="RangeSeekBar">
        <attr name="rsb_max" format="float"/>
        <attr name="rsb_min" format="float"/>
        <attr name="rsb_reserve" format="float"/>
        <attr name="rsb_cells" format="integer"/>
        <attr name="rsb_progress_hint_mode" format="enum">
            <enum name="default_mode" value="0"/>
            <enum name="always_hide" value="1"/>
            <enum name="always_show" value="2"/>
        </attr>
        <attr name="rsb_line_color_selected" format="color"/>
        <attr name="rsb_line_color_edge" format="color"/>
        <attr name="rsb_thumb_primary_color" format="color"/>
        <attr name="rsb_thumb_secondary_color" format="color"/>
        <attr name="rsb_mark_text_array" format="reference"/>
        <attr name="rsb_thumb_res_id" format="reference"/>
        <attr name="rsb_progress_hint_res_id" format="reference"/>
        <attr name="rsb_text_padding" format="dimension"/>
        <attr name="rsb_text_size" format="dimension"/>
        <attr name="rsb_hint_bg_height" format="dimension"/>
        <attr name="rsb_hint_bg_with" format="dimension"/>
        <attr name="rsb_hint_bg_padding" format="dimension"/>
        <attr name="rsb_seek_bar_height" format="dimension"/>
        <attr name="rsb_thumb_size" format="dimension"/>
        <attr name="rsb_cell_mode" format="enum">
            <enum name="number" value="0"/>
            <enum name="other" value="1"/>
        </attr>
        <attr name="rsb_seek_bar_mode" format="enum">
            <enum name="single" value="1"/>
            <enum name="range" value="2"/>
        </attr>
    </declare-styleable>
    <!--游戏-->
    <declare-styleable name="GameView">
        <attr name="gv_title" format="string"/>
        <attr name="gv_src" format="reference"/>
        <attr name="gv_bg_color" format="color"/>
    </declare-styleable>
    <!--Section-->
    <declare-styleable name="SectionView">
        <attr name="sv_title" format="string"/>
        <attr name="sv_src" format="reference"/>
        <attr name="sv_bg_color" format="color"/>
    </declare-styleable>
</resources>